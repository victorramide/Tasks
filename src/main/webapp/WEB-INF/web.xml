<?xml version="1.0" encoding="UTF-8"?>
<web-app
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0">
	<display-name>tasks</display-name>
	<welcome-file-list>
		<welcome-file>/WEB-INF/view/home.jsp</welcome-file>
	</welcome-file-list>
	
	<filter>
		<filter-name>PF</filter-name>
		<filter-class>dev.ramide.tasks.servlet.PermissionFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>PF</filter-name>
		<url-pattern>/entry</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>CF</filter-name>
		<filter-class>dev.ramide.tasks.servlet.ControllerFilter
		</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CF</filter-name>
		<url-pattern>/entry</url-pattern>
	</filter-mapping>

</web-app>